<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="myVariable"
            type="String" />
        <variable
            name="user"
            type="com.bharathikasi.databindingdemoapp.pojo.User" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="25dp"
        >
        <TextView
            android:id="@+id/name"
            android:hint="name"
            android:text="@{user.PName}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/age"
            android:hint="age"
            android:text="@{String.valueOf(user.PAge)}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/active"
            android:hint="active"
            android:text="@{user.PIsActive ? `Active`:`Inactive`}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            />
        <Button
            android:id="@+id/buttonOnlick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/black"
            android:onClick="@{() -> user.handleClick()}"
            android:text="@{user.PName}"
            android:enabled="@{user.PIsActive}"
            />
        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="30dp"
            android:loadImage="@{user.pImageUrl}"

            />
    </LinearLayout>
</layout>
